
<% if (page.posts.length > 0) { %>
    <div class="recent-posts">
        <h1 class="recent-title">Note</h1>
        <ul class="recent-posts-ul">
            <% page.posts.sort('date', -1).each(function(post) { %>
                <li class="recent-posts-li">
                    <div class="recent-post-item">
                        <% if (post.date) { %>
                            <div class="recent-post-time" datetime="<%=post.date.toJSON()%>">
                                <%=date(post.date, 'll')%>
                            </div>
                            <span class="h"> - </span>
                        <% } %>
                        <a href="<%=config.root + post.path%>"><%=post.title%></a>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
<% } %>

<% if (page.prev || page.next){ %>
    <div class="pagination noborder">
        <% if (page.next){ %>
            <div class="nav-next nav-item">
                <a href="/page/<%=page.next%>">较旧的文章</a>
            </div>
        <% } %>
        <% if (page.prev){ %>
            <div class="nav-prev nav-item">
                <% if (page.prev == 1) { %>
                    <a href="/">较新的文章</a>
                <% } else { %>
                    <a href="/page/<%=page.prev%>">较新的文章</a>
                <% } %>
            </div>
        <% } %>
    </div>
<% } %>
